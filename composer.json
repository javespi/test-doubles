    "description": "Test doubles",
    "type": "project",
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "TestDoubles\\": "src/",
            "tests\\TestDoubles\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Javier Espinosa",
            "email": "javespalf@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^2.16",
